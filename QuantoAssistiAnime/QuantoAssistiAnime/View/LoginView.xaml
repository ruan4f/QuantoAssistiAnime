<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuantoAssistiAnime.View.LoginView"
             Title="Quanto Assisti Anime">
    <ContentPage.Content>
        <StackLayout 
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">
            <Label Text="Meu app Social" TextColor="Black" FontSize="Medium"/>
            <Button Command="{Binding LoginCommand}" Text="Logar Com Facebook"
                    BackgroundColor="Blue" FontSize="Medium" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>